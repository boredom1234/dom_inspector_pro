{
  "manifest_version": 3,
  "name": "XPath & Selector Extractor",
  "version": "1.0",
  "description": "Extract XPaths and CSS selectors for all elements on a webpage",
  "permissions": [
    "activeTab",
    "scripting"
  ],
  "action": {
    "default_popup": "popup.html",
    "default_title": "Extract XPaths & Selectors"
  },
  "content_scripts": [
    {
      "matches": ["<all_urls>"],
      "js": ["content.js"]
    }
  ],
  "icons": {
    "16": "icons/icon16.png",
    "48": "icons/icon48.png",
    "128": "icons/icon128.png"
  }
}