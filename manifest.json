{
  "manifest_version": 3,
  "name": "DOM Inspector Pro",
  "version": "1.1",
  "description": "Advanced DOM analysis and element extraction for test automation",
  "permissions": [
    "activeTab",
    "scripting",
    "storage",
    "sidePanel"
  ],
  "host_permissions": [
    "<all_urls>"
  ],
  "action": {
    "default_title": "DOM Inspector Pro"
  },
  "side_panel": {
    "default_path": "popup.html"
  },
  "background": {
    "service_worker": "background.js"
  },
  "content_scripts": [
    {
      "matches": ["<all_urls>"],
      "exclude_matches": ["http://localhost:3000/*", "https://localhost:3000/*", "http://127.0.0.1:3000/*", "https://127.0.0.1:3000/*"],
      "js": ["dom-analyzer.js", "content.js"],
      "run_at": "document_end"
    }
  ],
  "web_accessible_resources": [
    {
      "resources": [
        "shared/constants.js",
        "dom-analyzer/core/element-extractor.js",
        "content/interaction-tracker.js",
        "content/validation-tracker.js",
        "content/conditional-renderer-tracker.js",
        "content/context-aggregator.js",
        "json-editor.html",
        "json-editor.js"
      ],
      "matches": ["<all_urls>"]
    }
  ],
  "icons": {
    "16": "icons/icon16.png",
    "48": "icons/icon48.png",
    "128": "icons/icon128.png"
  }
}